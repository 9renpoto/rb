{
  "name": "myapp",
  "dependencies": {},
  "devDependencies": {
    "@prettier/plugin-ruby": "0.12.3",
    "husky": "2.7.0",
    "lint-staged": "9.0.1",
    "prettier": "1.18.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "ignore": [
      "db/migrate/*.rb",
      "db/schema.rb"
    ],
    "linters": {
      "*.{js,md,yml}": [
        "prettier --write",
        "git add"
      ],
      "{app,test,db,lib,spec}/**/*.{rb,rake}": [
        "prettier --write",
        "bundle exec rubocop -a",
        "git add"
      ]
    }
  },
  "private": true,
  "scripts": {
    "test": ""
  }
}
