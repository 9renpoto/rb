{
  "name": "myapp",
  "dependencies": {},
  "devDependencies": {
    "@prettier/plugin-ruby": "0.18.2",
    "husky": "4.2.5",
    "lint-staged": "10.2.11",
    "prettier": "2.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,md,yml}": [
      "prettier --write",
      "git add"
    ],
    "{app,test,db,lib,spec}/**/*.{rb,rake}": [
      "prettier --write",
      "bundle exec rubocop -a",
      "git add"
    ]
  },
  "private": true,
  "scripts": {
    "test": ""
  }
}
